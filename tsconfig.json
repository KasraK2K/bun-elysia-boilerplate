{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2022",
		"moduleResolution": "node",
		"baseUrl": "./src",
		// prettier-ignore
		"paths": {
			"#src/*": ["*"],								// Source Folder
			"#base/*": ["base/*"],							// Base folder is a place to create base concept of framework
			"#boot/*": ["boot/*"],							// All files in this folder should run on framework starting up point depends of setting file
			"#apps/*": ["apps/*"],							// Other application used in this application
			"#modules/*": ["modules/*"],					// All modules
			"#common/*": ["common/*"],						// All global things you don't know where to place it
			"#utils/*": ["utils/*"],						// All global multipurpose utilities
			"#helpers/*": ["helpers/*"],					// All global multipurpose function related to some feature
			"#types/*": ["types/*"],						// All general interfaces, types and enums
			"#constants/*": ["constants/*"],				// Place to hold all hardcoded constants
			"#models/*": ["models/*"],						// Place to hold all models
			"#meditation": ["../meditation.config.ts"],		// Config file exist in meditation.config.ts
			"#script": ["../meditation.script.ts"],			// Core script exist in meditation.script.ts
			"#bootstrap": ["boot/index.ts"],				// Trigger boot
			"#routes": ["./routes"]							// All routes
		},
		"types": ["bun-types"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	}
}
